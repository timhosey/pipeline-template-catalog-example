pipeline {
    agent any
    
    stages {
        stage('Hello World') { 
            steps {
                echo "Hello, ${targetName}!"
            }
        }
        stage('Wait') { 
            steps {
                sleep 500 
            }
        }
    }

    post {

      // Email Ext plugin: 
      success {  
        echo "SUCCESSFUL RUN!"
      }

      failure {
        echo "FAILED RUN!"
      }
  }
}